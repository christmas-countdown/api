{
  "openapi" : "3.0.0",
  "info" : {
    "title" : "Christmas Countdown",
    "termsOfService" : "https://docs.christmascountdown.live/api#terms",
    "contact" : {
      "name" : "Isaac",
      "url" : "https://go.eartharoid.me/discord",
      "email" : "contact@christmascountdown.live"
    },
    "license" : {
      "name" : "MIT",
      "url" : "https://choosealicense.com/licenses/mit"
    },
    "version" : "pine"
  },
  "servers" : [ {
    "url" : "https://virtserver.swaggerhub.com/eartharoid/christmas-countdown/pine",
    "description" : "SwaggerHub API Auto Mocking"
  }, {
    "url" : "https://api.christmascountdown.live/pine",
    "description" : "Production API server"
  }, {
    "url" : "http://localhost:{port}/pine",
    "description" : "Local development API server",
    "variables" : {
      "port" : {
        "default" : "8080"
      }
    }
  } ],
  "paths" : {
    "/timeleft" : {
      "get" : {
        "tags" : [ "countdown" ],
        "summary" : "Get the time left in sleeps/days etc, combined into one response",
        "description" : "The same as `/timeleft/{period}` but all `period`s are combined.",
        "parameters" : [ {
          "name" : "timezone",
          "in" : "query",
          "description" : "The timezone",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "default" : "UTC"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "The time left until Christmas",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/timeleft-combined"
                },
                "example" : {
                  "months" : 1,
                  "weeks" : 5,
                  "sleeps" : 37,
                  "days" : 36,
                  "hours" : 870,
                  "minutes" : 51840,
                  "seconds" : 3110400
                }
              }
            }
          }
        }
      }
    },
    "/timeleft/total" : {
      "get" : {
        "tags" : [ "countdown" ],
        "summary" : "Get the combined total time left until Christmas",
        "parameters" : [ {
          "name" : "timezone",
          "in" : "query",
          "description" : "The timezone",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "default" : "UTC"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "The total time left until Christmas",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/total-timeleft"
                },
                "example" : {
                  "days" : 36,
                  "hours" : 2,
                  "minutes" : 48,
                  "seconds" : 59
                }
              }
            }
          }
        }
      }
    },
    "/timeleft/{period}" : {
      "get" : {
        "tags" : [ "countdown" ],
        "summary" : "Get the time left in sleeps/days etc",
        "parameters" : [ {
          "name" : "period",
          "in" : "path",
          "description" : "days/sleeps etc",
          "required" : true,
          "style" : "simple",
          "explode" : false,
          "schema" : {
            "type" : "string",
            "enum" : [ "months", "weeks", "sleeps", "days", "hours", "minutes", "seconds" ]
          }
        }, {
          "name" : "timezone",
          "in" : "query",
          "description" : "The timezone",
          "required" : false,
          "style" : "form",
          "explode" : true,
          "schema" : {
            "type" : "string",
            "default" : "UTC"
          }
        } ],
        "responses" : {
          "200" : {
            "description" : "The time left until Christmas",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/timeleft-period"
                },
                "example" : {
                  "sleeps" : 37
                }
              }
            }
          }
        }
      }
    },
    "/joke" : {
      "get" : {
        "tags" : [ "other" ],
        "summary" : "Get a Christmas joke",
        "description" : "Returns a joke object (question and answer).",
        "responses" : {
          "200" : {
            "description" : "A joke",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/joke"
                },
                "example" : {
                  "question" : "How much did Santa pay for his sleigh?",
                  "answer" : "Nothing â€“ it was on the house."
                }
              }
            }
          }
        }
      }
    },
    "/jokes" : {
      "get" : {
        "tags" : [ "other" ],
        "summary" : "Get all available Christmas jokes",
        "description" : "Returns an array of joke objects.",
        "responses" : {
          "200" : {
            "description" : "Jokes",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/jokes"
                }
              }
            }
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "joke" : {
        "type" : "object",
        "properties" : {
          "question" : {
            "type" : "string"
          },
          "answer" : {
            "type" : "string"
          }
        }
      },
      "jokes" : {
        "type" : "array",
        "items" : {
          "$ref" : "#/components/schemas/joke"
        }
      },
      "timeleft-combined" : {
        "type" : "object",
        "properties" : {
          "months" : {
            "type" : "number"
          },
          "weeks" : {
            "type" : "number"
          },
          "sleeps" : {
            "type" : "number"
          },
          "days" : {
            "type" : "number"
          },
          "hours" : {
            "type" : "number"
          },
          "minutes" : {
            "type" : "number"
          },
          "seconds" : {
            "type" : "number"
          }
        }
      },
      "total-timeleft" : {
        "type" : "object",
        "properties" : {
          "days" : {
            "type" : "number"
          },
          "hours" : {
            "type" : "number"
          },
          "minutes" : {
            "type" : "number"
          },
          "seconds" : {
            "type" : "number"
          }
        }
      },
      "timeleft-period" : {
        "type" : "object",
        "properties" : {
          "{period=string}" : {
            "type" : "number"
          }
        }
      }
    }
  }
}